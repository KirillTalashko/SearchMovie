<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_continue_viewing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_text"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/lato_regular"
        android:text="@string/watch_film"
        android:textSize="@dimen/text_size" />

    <androidx.cardview.widget.CardView
        android:id="@+id/image_continue_viewing"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="@dimen/margin_start_text"
        android:padding="10dp"
        app:cardCornerRadius="39dp">

        <ImageView
            android:id="@+id/image_trailer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center" />

        <include
            layout="@layout/screen_play_trailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_margin="30dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_trending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_text"
        android:fontFamily="@font/lato_regular"
        android:text="@string/popular"
        android:textSize="@dimen/text_size" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_image_popular"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="11dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="3"
        tools:listitem="@layout/show_popular_movie_main" />

</LinearLayout>