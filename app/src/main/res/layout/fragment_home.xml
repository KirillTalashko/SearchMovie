<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_continue_viewing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_text"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/lato_regular"
        android:text="@string/watch_film"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toTopOf="@id/image_continue_viewing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/image_continue_viewing"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginHorizontal="@dimen/margin_start_text"
        android:layout_marginTop="28dp"
        app:cardCornerRadius="39dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_continue_viewing">

        <ImageView
            android:id="@+id/image_trailer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center" />

        <com.example.searchmovie.PlayCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/margin_start_text"
            app:cardCornerRadius="15dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_trending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_start_text"
        android:fontFamily="@font/lato_regular"
        android:text="@string/popular"
        android:textSize="@dimen/text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_continue_viewing" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_image_popular"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="11dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_trending"
        tools:itemCount="3"
        tools:listitem="@layout/show_popular_movie_main" />

</androidx.constraintlayout.widget.ConstraintLayout>